<%- include("partials/header.ejs") %>

    <div class="create">
        <% if(locals.blog) { %>
            <form action="/edit/<%= blog.id %>" method="post">

                <input id="title-input" type="text" name="title" value="<%= blog.title %>"> <br>

                <label for="imageInp"> <img id="outputImg" src= <%= blog.image %> height="200" width="300"> </label>
                <input id="imageInp" type="file" name="image" accept="image/*" style="display: none;"
                    onchange="renderImg(event)"> <br>

                <textarea name="description"> <%= blog.description %>
                                        </textarea> <br>
                <%} else {%>
                    <form action="/create" method="post">
                        <input id="title-input" type="text" name="title" placeholder="Title Goes Here!" required> <br>
                        <label for="imageInp"> <img id="outputImg" src="images/image-upload.png" height="200"> </label>
                        <input id="imageInp" type="file" name="image" accept="image/*" style="display: none;"
                            onchange="renderImg(event)"> <br>

                        <textarea name="description" id="text-area">Write your thoughts here...
                                        </textarea> <br>
                        <% } %>

                            <input id="publish_btn" type="submit" value="PUBLISH!">

                    </form>
    </div>

    <%- include("partials/footer.ejs") %>